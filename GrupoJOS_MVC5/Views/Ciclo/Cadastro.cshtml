@{
    ViewBag.Title = "Cadastro de Ciclo";
    var semana = ViewBag.Semana;
    var date = DateTime.Now;
    var data = date.ToShortDateString();
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">Home</a>
            </li>
            <li>
                <a href="@Url.Action("Index","AgendaCliente")">Agenda</a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Ciclo")">Ciclo</a>
            </li>
            <li class="active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
</div>




<div class="wrapper wrapper-content animated fadeInRight">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>Cadastro de Ciclo - <b>Semana @semana</b></h5>
        </div>
        <div class="ibox-content">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <input type="hidden" name="semana" value="@semana" />
                <div class="row">
                    <div class="col-lg-6">
                        <div class="ibox float-e-margins">
                            <div class="ibox-content">
                                <h3>Data</h3>
                                <p>
                                    Selecione um dia para visita:
                                </p>

                                <select class="chosen-select" tabindex="2" name="DiaVisita">
                                    <option id="2">Segunda</option>
                                    <option id="3">Terça</option>
                                    <option id="4">Quarta</option>
                                    <option id="5">Quinta</option>
                                    <option id="6">Sexta</option>
                                </select>

                                <span class="field-validation-error text-danger" data-valmsg-for="DiaVisita" data-valmsg-replace="true">@ViewBag.ErroData</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="ibox">
                            <div class="ibox-content">
                                <h3>Hora</h3>
                                <p>
                                    Selecione o horário da visita:
                                </p>

                                <div class="input-group clockpicker" data-autoclose="true">
                                    <input type="text" autocomplete="off" class="form-control" name="HoraVisita" value="09:30">
                                    <span class="input-group-addon">
                                        <span class="fa fa-clock-o"></span>
                                    </span>
                                </div>
                                <span class="field-validation-error text-danger" data-valmsg-for="DataVisita" data-valmsg-replace="true">@ViewBag.ErroHora</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6">
                        <div class="ibox-content">
                            <p>
                                Selecione o P. Saúde:
                            </p>
                            <div class="form-group">
                                <label class="font-noraml">Profissionais:</label>
                                <div>
                                    <select data-placeholder="Selecione um profissional" class="chosen-select" tabindex="2" name="Cliente">
                                        @foreach (var item in ViewBag.ListadeClientes)
                                        {
                                            if (item.idcliente == ViewBag.Cliente)
                                            {
                                                <option value='@item.idcliente' selected> @item.Nome </option>
}
                                            else
                                            {
                                                <option value='@item.idcliente'> @item.Nome </option>
}
                                        }
                                    </select>
                                </div>
                                <span class="field-validation-error text-danger" data-valmsg-for="Cliente" data-valmsg-replace="true">@ViewBag.ErroCliente</span>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="ibox-content">
                            <p>
                                Produtos que podem ser apresentadas nessa visita.
                            </p>
                            <div class="form-group">
                                <label class="font-noraml">Produtos:</label>
                                <div>
                                    <select data-placeholder="Selecione um ou mais produtos" class="chosen-select" multiple tabindex="4" name="Produtos">
                                        @foreach (var item in ViewBag.ListadeProdutos)
                                        {
                                            <option value='@item.idproduto'>@item.Nome</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <span class="field-validation-error text-danger" data-valmsg-for="Produtos" data-valmsg-replace="true">@ViewBag.ErroProduto</span>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary m-t-15 waves-effect">SALVAR</button>
                <button type="button" onclick="window.history.back()" class="btn btn-danger m-t-15 waves-effect">CANCELAR</button>
            }
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/plugins/dataPickerStyles")
    @Styles.Render("~/plugins/clockpickerStyles")
    @Styles.Render("~/Content/plugins/chosen/chosenStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/dataPicker")
    @Scripts.Render("~/plugins/chosen")
    @Scripts.Render("~/plugins/clockpicker")

    <script type="text/javascript">
        $(document).ready(function () {
            $('.chosen-select').chosen({ width: "100%" });

            $('.clockpicker').clockpicker();
        });
    </script>
}