@{
    ViewBag.Title = "Edição de Ciclo";
    var semana = ViewBag.Semana;
    var date = DateTime.Now;
    var data = date.ToShortDateString();
}

@model GrupoJOS_MVC5.Models.Model_CicloRes

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">Home</a>
            </li>
            <li>
                <a href="@Url.Action("Index","AgendaCliente")">Agenda</a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Ciclo")">Ciclo</a>
            </li>
            <li class="active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>@ViewBag.Title - <b>Semana @semana</b></h5>
        </div>
        <div class="ibox-content">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <input type="hidden" name="semana" value="@semana" />
                <input type="hidden" name="iddia" value="@Model.iddia" />
                <input type="hidden" name="idciclo" value="@Model.idciclo" />

                <div class="row">
                    <div class="col-lg-6">
                        <div class="ibox float-e-margins">
                            <div class="ibox-content">
                                <h3>Data</h3>
                                <p>
                                    Selecione um dia para visita:
                                </p>

                                <select class="chosen-select" tabindex="2" name="DiaVisita">
                                    @foreach (var item in ViewBag.DiasSemana)
                                    {
                                        if (item == Model.dia)
                                        {
                                            <option value='@item' selected> @item</option>
                                        }
                                        else
                                        {
                                            <option value='@item'> @item</option>
                                        }
                                    }

                                </select>

                                <span class="field-validation-error text-danger" data-valmsg-for="DiaVisita" data-valmsg-replace="true">@ViewBag.ErroData</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="ibox">
                            <div class="ibox-content">
                                <h3>Hora</h3>
                                <p>
                                    Selecione o horário da visita:
                                </p>

                                <div class="input-group clockpicker" data-autoclose="true">
                                    <input type="text" class="form-control" autocomplete="off" name="HoraVisita" value="@Model.hora">
                                    <span class="input-group-addon">
                                        <span class="fa fa-clock-o"></span>
                                    </span>
                                </div>
                                <span class="field-validation-error text-danger" data-valmsg-for="DataVisita" data-valmsg-replace="true">@ViewBag.ErroHora</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6">
                        <div class="ibox-content">
                            <p>
                                Selecione o P. Saúde:
                            </p>
                            <div class="form-group">
                                <label class="font-noraml">Profissionais:</label>
                                <div>
                                    <select data-placeholder="Selecione um profissional" class="chosen-select" tabindex="2" name="Cliente">
                                        @foreach (var item in ViewBag.ListadeClientes)
                                        {
                                            if (item.idcliente == Model.idcliente)
                                            {
                                                <option value='@item.idcliente' selected> @item.Nome </option>
                                            }
                                            else
                                            {
                                                <option value='@item.idcliente'> @item.Nome </option>
                                            }
                                        }
                                    </select>
                                </div>
                                <span class="field-validation-error text-danger" data-valmsg-for="Cliente" data-valmsg-replace="true">@ViewBag.ErroCliente</span>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="ibox-content">
                            <p>
                                Produtos que podem ser apresentadas nessa visita.
                            </p>
                            <div class="form-group">
                                <label class="font-noraml">Produtos:</label>
                                <div>
                                    <select data-placeholder="Selecione um ou mais Produtos" class="chosen-select" multiple tabindex="4" name="Produtos">
                                        @foreach (var item in ViewBag.ListadeProdutos)
                                        {
                                            <option value='@item.idproduto'>@item.Nome</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <span class="field-validation-error text-danger" data-valmsg-for="Produtos" data-valmsg-replace="true">@ViewBag.ErroProduto</span>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary m-t-15 waves-effect">SALVAR</button>
                <button type="button" onclick="window.history.back()" class="btn btn-danger m-t-15 waves-effect">CANCELAR</button>

                <div class="pull-right">
                    <button type="button" class="btn btn-warning m-t-15 waves-effect" data-type="confirm" onclick="AssignButtonClicked(this)" data-assigned-id="@Model.iddia" data-ciclo-id="@Model.idciclo" data-semana-id="@Model.semana"><i class="fa fa-eraser"></i> APAGAR</button>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/plugins/dataPickerStyles")
    @Styles.Render("~/plugins/clockpickerStyles")
    @Styles.Render("~/Content/plugins/chosen/chosenStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/dataPicker")
    @Scripts.Render("~/plugins/chosen")
    @Scripts.Render("~/plugins/clockpicker")

    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script>
        function AssignButtonClicked(elem) {
            var iddia = $(elem).data('assigned-id');
            var idciclo = $(elem).data('ciclo-id');
            var semana = $(elem).data('semana-id');
            swal({
                title: "Tem certeza?",
                text: "Esse registro sera apagado e nao podera ser recuperado!",
                icon: "warning",
                buttons: { cancel: "Cancelar", ok: "Sim, pode remover!" },
                dangerMode: true,
            })
                .then((willDelete) => {
                    if (willDelete) {
                        swal("Removido!", "Registro foi removido com sucesso!", "success")
                            .then((value) => {
                                $.post("/Ciclo/RemoverCicloItem/" + iddia + "/" + idciclo + "");
                                window.location = "/Ciclo/Editar/"+semana+"";
                            });
                    } else {
                        swal("Cancelado!", "O registro não foi removido", "error");
                    }
                });
        }
    </script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('.chosen-select').chosen({ width: "100%" });
            $('.clockpicker').clockpicker();
        });
    </script>


}