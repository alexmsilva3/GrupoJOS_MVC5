                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="material-icons">phone</i>
                                                </span>
                                                <div class="form-line">
                                                    @Html.EditorFor(model => model.Fone2, new { htmlAttributes = new { @class = "form-control", placeholder = "Ex: +55(042) 0000-0000" } })
                                                </div>
                                            </div>
                                            @Html.ValidationMessageFor(model => model.Fone2, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <br>

                                    <div class="row">
                                        <div class="col-md-3">
                                            <label for="contato">Contato (Secretaria)</label>
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="material-icons">perm_identity</i>
                                                </span>
                                                <div class="form-line">
                                                    @Html.EditorFor(model => model.Contato, new { htmlAttributes = new { @class = "form-control", placeholder = "Nome do contato" } })
                                                </div>
                                            </div>
                                            @Html.ValidationMessageFor(model => model.Contato, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="col-md-3">
                                            <label for="aniversario_s">Aniversário (Secretaria)</label>
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="material-icons">cake</i>
                                                </span>
                                                <div class="form-line">
                                                    @Html.EditorFor(model => model.Aniversario_c, new { htmlAttributes = new { @class = "form-control", placeholder = "Ex: 30/07/2016" } })
                                                </div>
                                            </div>
                                            @Html.ValidationMessageFor(model => model.Aniversario_c, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="col-md-3">
                                            <label for="hora_in">Atendimento (A partir das)</label>
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="material-icons">access_time</i>
                                                </span>
                                                <div class="form-line">
                                                    @Html.EditorFor(model => model.Horario_In, new { htmlAttributes = new { @class = "form-control", placeholder = "Ex: 08:00" } })
                                                </div>
                                            </div>
                                            @Html.ValidationMessageFor(model => model.Horario_In, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="col-md-3">
                                            <label for="hora_out">Atendimento (Até)</label>
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="material-icons">access_time</i>
                                                </span>
                                                <div class="form-line">
                                                    @Html.EditorFor(model => model.Horario_Out, new { htmlAttributes = new { @class = "form-control", placeholder = "Ex: 18:00" } })
                                                </div>
                                            </div>
                                            @Html.ValidationMessageFor(model => model.Horario_Out, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <br>

                                    <div class="row">
                                        <div class="col-md-12">
                                            <label for="observacoes">Observações</label>
                                            <div class="row clearfix">
                                                <div class="col-sm-12">
                                                    <div class="form-group">
                                                        <div class="form-line">
                                                            @Html.TextAreaFor(model => model.Observacoes, 10, 100, new { htmlAttributes = new { @class = "form-control no-resize", placeholder = "Observações..." } })
                                                        </div>
                                                    </div>
                                                </div>
                                                @Html.ValidationMessageFor(model => model.Observacoes, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <br>
                                    <div class="row clearfix">
                                        <div class="col-md-12">
                                            <div class="card">
                                                <div class="header">
                                                    <h2>
                                                        Especialidades
                                                    </h2>
                                                </div>
                                                <div class="form-group">
                                                    <label class="font-noraml">Especialidades 1.</label>
                                                    <div>
                                                        <select class="chosen-select" tabindex="4" name="NomeEspecialidade1">
                                                            @foreach (var item in ViewBag.ListaEspecialidade)
                                                            {
                                                                if (item.Nome == Model.NomeEspecialidade1)
                                                                {
                                                                    <option value='@item.Nome' selected>@item.Nome</option>
                                                                }
                                                                else
                                                                {
                                                                    <option value='@item.Nome'>@item.Nome</option>
                                                                }

                                                            }
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="font-noraml">Especialidades 2.</label>
                                                    <div>
                                                        <select class="chosen-select" tabindex="4" name="NomeEspecialidade2">
                                                            @foreach (var item in ViewBag.ListaEspecialidade)
                                                            {
                                                                if (item.Nome == Model.NomeEspecialidade2)
                                                                {
                                                                    <option value='@item.Nome' selected>@item.Nome</option>
                                                                }
                                                                else
                                                                {
                                                                    <option value='@item.Nome'>@item.Nome</option>
                                                                }

                                                            }
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="font-noraml">Especialidades 3.</label>
                                                    <div>
                                                        <select class="chosen-select" tabindex="4" name="NomeEspecialidade3">
                                                            @foreach (var item in ViewBag.ListaEspecialidade)
                                                            {
                                                                if (item.Nome == Model.NomeEspecialidade3)
                                                                {
                                                                    <option value='@item.Nome' selected>@item.Nome</option>
                                                                }
                                                                else
                                                                {
                                                                    <option value='@item.Nome'>@item.Nome</option>
                                                                }

                                                            }
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="font-noraml">Especialidades 4.</label>
                                                    <div>
                                                        <select class="chosen-select" tabindex="4" name="NomeEspecialidade4">
                                                            @foreach (var item in ViewBag.ListaEspecialidade)
                                                            {
                                                                if (item.Nome == Model.NomeEspecialidade4)
                                                                {
                                                                    <option value='@item.Nome' selected>@item.Nome</option>
                                                                }
                                                                else
                                                                {
                                                                    <option value='@item.Nome'>@item.Nome</option>
                                                                }

                                                            }
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="font-noraml">Especialidades 5.</label>
                                                    <div>
                                                        <select class="chosen-select" tabindex="4" name="NomeEspecialidade5">
