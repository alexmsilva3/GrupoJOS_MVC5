                                                </div>
                                            </div>
                                            @Html.ValidationMessageFor(model => model.CEP, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label for="bairro">Bairro</label>
                                            <div class="input-group">
                                                <span class="input-group-addon">
