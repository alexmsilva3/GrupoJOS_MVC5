                                    <div class="row">
                                        <div class="col-md-3">
                                            <label for="crm">CRM</label>
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="material-icons">style</i>
                                                </span>
                                                <div class="form-line">
                                                    @Html.EditorFor(model => model.CRM, new { htmlAttributes = new { @class = "form-control", placeholder = "Digite o CRM do cliente" } })
                                                </div>
                                            </div>
                                            @Html.ValidationMessageFor(model => model.CRM, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="col-md-3">
                                            <label for="nome">Nome</label>
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="material-icons">star_border</i>
                                                </span>
                                                <div class="form-line">
                                                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", placeholder = "Digite o nome do cliente" } })
                                                </div>
                                            </div>
                                            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                                        </div>
