@{
    Layout = null;
}

@model GrupoJOS_MVC5.Models.Login

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>Grupo JOS | Painel Adiministrativo</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">JOS</h1>

            </div>
            <h3>Bem vindo</h3>
            <p>
                Painel Administrativo para gerência de agendamento
            </p>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "Login falhou. Usuário ou senha incorretos.");

                <form class="m-t" role="form" action="#">
                    <div class="form-group">
                        @*<input type="email" class="form-control" placeholder="Username" required="">*@
                        @Html.EditorFor(u => u.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Usuario" } })
                    </div>
                    <div class="form-group">
                        @*<input type="password" class="form-control" placeholder="Password" required="">*@
                        @Html.EditorFor(u => u.Senha, new { htmlAttributes = new { @class = "form-control", placeholder = "Senha", type = "password" } })
                    </div>
                    <div class="row">
                        <div class="form-group">
                            @Html.CheckBoxFor(u => u.Lembrar, new { htmlAttributes = new { @class = "filled-in chk-col-blue" } })
                            <label for="lembrar">Lembrar</label>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary block full-width m-b">Entrar</button>

                </form>
            }
            <p class="m-t"> <small>Painel Administrativo GrupoJOS &copy; 2018</small> </p>
        </div>
    </div>
</body>
</html>


