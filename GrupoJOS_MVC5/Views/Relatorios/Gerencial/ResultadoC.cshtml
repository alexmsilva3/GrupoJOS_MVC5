@{
    ViewBag.Title = "Relatorio Gerencial";
}

@model GrupoJOS_MVC5.Models.ViewModelRelatorioGerencial

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li>
                <a>Home</a>
            </li>
            <li class="active">
                <a><strong>@ViewBag.Title</strong></a>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Relatorio Gerencial</h5>
                    </div>
                    <div class="ibox-content">

                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    @if(!String.IsNullOrEmpty(Model.campos.dataVisita)){<th>Data Visita</th>}
                                    @if(!String.IsNullOrEmpty(Model.campos.dataFinalizada)){<th>Data Finalizada</th>}
                                    @if(!String.IsNullOrEmpty(Model.campos.dataFinalizadaReal)){<th>Data Finalizada Real</th>}
                                    @if(!String.IsNullOrEmpty(Model.campos.usuario)){<th>Usuário</th>}
                                    @if(!String.IsNullOrEmpty(Model.campos.status)){<th>Status</th>}
                                    @if(!String.IsNullOrEmpty(Model.campos.clienteComercial)){<th>Cliente</th>}
                                    @if(!String.IsNullOrEmpty(Model.campos.ramo)){<th>Ramo</th>}
                                    @if(!String.IsNullOrEmpty(Model.campos.observacao)){<th>Observação</th>}
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    @if(!String.IsNullOrEmpty(Model.campos.dataVisita)){<th>Data Visita</th>}
                                    @if(!String.IsNullOrEmpty(Model.campos.dataFinalizada)){<th>Data Finalizada</th>}
                                    @if(!String.IsNullOrEmpty(Model.campos.dataFinalizadaReal)){<th>Data Finalizada Real</th>}
                                    @if(!String.IsNullOrEmpty(Model.campos.usuario)){<th>Usuário</th>}
                                    @if(!String.IsNullOrEmpty(Model.campos.status)){<th>Status</th>}
                                    @if(!String.IsNullOrEmpty(Model.campos.clienteComercial)){<th>Cliente</th>}
                                    @if(!String.IsNullOrEmpty(Model.campos.ramo)){<th>Ramo</th>}
                                    @if(!String.IsNullOrEmpty(Model.campos.observacao)){<th>Observação</th>}
                                </tr>
                            </tfoot>
                            <tbody>
                                @foreach (var item in Model.tipoComercial)
                                {
                                    <tr>
                                        @if(!String.IsNullOrEmpty(Model.campos.dataVisita))
                                        {
                                            <td>@item.agenda.DataVisita.Substring(0, 10) - @item.agenda.HoraVisita.Substring(0, 5)</td>
                                        }
                                        @if(!String.IsNullOrEmpty(Model.campos.dataFinalizada))
                                        {
                                            <td>@item.agenda.DataFinalizada</td>
                                        }
                                        @if(!String.IsNullOrEmpty(Model.campos.dataFinalizadaReal))
                                        {
                                            <td>@item.agenda.DataFinalizadaReal</td>
                                        }
                                        @if(!String.IsNullOrEmpty(Model.campos.usuario))
                                        {
                                            <td>@item.usuario.Nome</td>
                                        }
                                        @if(!String.IsNullOrEmpty(Model.campos.status))
                                        {
                                            if(item.agenda.Status == "1"){<td>Finalizado</td>}
                                            else{<td>Em aberto</td>}
                                        }
                                        @if(!String.IsNullOrEmpty(Model.campos.clienteComercial))
                                        {
                                            <td>@item.clienteComercial.Nome</td>
                                        }
                                        @if(!String.IsNullOrEmpty(Model.campos.ramo))
                                        {
                                            <td>
                                                <span class="label label-info"> @item.clienteComercial.RamoNome</span>
                                            </td>
                                        }
                                        @if(!String.IsNullOrEmpty(Model.campos.observacao))
                                        {
                                            <td>@item.agenda.Observacoes</td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")


    <script type="text/javascript">

        $(document).ready(function () {

            $('.dataTables-example').DataTable({
                pageLength: 25,
                responsive: true,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'ExampleFile' },
                    { extend: 'pdf', title: 'ExampleFile' },

                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                        }
                    }
                ]

            });
        });

    </script>
}
